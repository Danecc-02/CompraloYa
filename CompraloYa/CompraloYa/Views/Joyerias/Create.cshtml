    @model CompraloYa.Models.Joyeria

@{
    ViewData["Title"] = "Crear Producto";
}
<link rel="stylesheet" href="~/css/Joyas.css" />
<h1 class="h1">Create Producto</h1>

<h4>Joyeria</h4>
<hr />
<div class="row" id="creatediv">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CodigoJoya" class="control-label"></label>
                <input asp-for="CodigoJoya" class="form-control" />
              
                <span asp-validation-for="CodigoJoya" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreJoya" class="control-label"></label>
                <input asp-for="NombreJoya" class="form-control" />
                <span asp-validation-for="NombreJoya" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DetalleJoya" class="control-label"></label>
                <input asp-for="DetalleJoya" class="form-control" />
                <span asp-validation-for="DetalleJoya" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock" class="control-label"></label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecioJoya" class="control-label"></label>
                <input asp-for="PrecioJoya" class="form-control" />
                <span asp-validation-for="PrecioJoya" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdSend" class="control-label">Tipo de envío</label>
                <select asp-for="IdSend" class ="form-control" asp-items="ViewBag.IdSend"></select>
            </div>
            <div class="form-group">
                <label asp-for="Img" class="control-label"></label>
                <input asp-for="Img"  />
                <span asp-validation-for="Img" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-dark">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
