@model CompraloYa.Common.Pagination<Joyeria>

@{
    ViewData["Title"] = "Joyeria";
}


    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/common.css" />
    <link rel="stylesheet" href="~/css/Joyas/Joyas.css" />


<body>
    
  

    <div id="h">
        <h3>Joyas</h3>
        <p id="p1">
            <a asp-action="Create" class="btn btn-success">Vender Articulo</a>
        </p>
    </div>
    <hr />




    <div class="divJoyas">
      
        

        @foreach (var item in Model.Result)
        {



        <div id="td">

            <div>
                <b>
                    @Html.DisplayNameFor(model => model.Result.SingleOrDefault().CodigoJoya)
                </b>
                @Html.DisplayFor(modelItem => item.CodigoJoya)

            </div>


            <div>
                <b>
                    @Html.DisplayNameFor(model => model.Result.SingleOrDefault().NombreJoya)
                </b>
                @Html.DisplayFor(modelItem => item.NombreJoya)
            </div>

            <div>
                <b>
                    @Html.DisplayNameFor(model => model.Result.SingleOrDefault().DetalleJoya)
                </b>
                @Html.DisplayFor(modelItem => item.DetalleJoya)
            </div>

            <div>
                <b>
                    @Html.DisplayNameFor(model => model.Result.SingleOrDefault().Stock)
                </b>
                @Html.DisplayFor(modelItem => item.Stock)

            </div>


            <div>
                <b>
                    @Html.DisplayNameFor(model => model.Result.SingleOrDefault().PrecioJoya)
                </b>

                @Html.DisplayFor(modelItem => item.PrecioJoya)

            </div>

            <div>  @Html.DisplayFor(modelItem => item.TypeSend.IdSend) </div>
            
            <a id="btnD" class="btn btn-outline-dark" asp-controller="Tarjetas" asp-action="Verificacion"> Comprar</a>
        </div>



            <img src="~/Image/@item.ImageName" class="rounded" asp-append-version="true" />


        }
    </div>


    <div id="Pagination">
        @if (Model.Result.Count() > 0)
        {
            <span>
                <strong>@Model.TotalRecords</strong> registros encontrados
            </span>
            <span> | </span>
            <span>
                Pagina <strong>@Model.CurrentPage</strong> de
                <strong> @Model.TotalPage</strong>
            </span>
            <span>|</span>

        }
        else
        {
            <span> No hay resultados para esta busqueda </span>
            <span> | </span>
        }

        @if (Model.CurrentPage > 1)
        {
            @Html.ActionLink("<<", "Index", new { Page = 1, Search = Model.Search },
                new { @class = "btn btn-sm btn-default" })
            <span></span>

            @Html.ActionLink("Anterior", "Index", new { Page = Model.CurrentPage - 1, Search = Model.Search },
                new { @class = "btn btn-sm btn-default" })
        }
        else
        {
            @Html.ActionLink("<<", "Index", new { Page = 1, Search = Model.Search },
              new { @class = "btn btn-sm btn-default disabled " })

            @Html.ActionLink("Anterior", "Index", new { Page = 1, Search = Model.Search },
              new { @class = "btn btn-sm btn-default disabled" })
        }

        <span></span>

        @if (Model.CurrentPage < Model.TotalPage)
        {
            @Html.ActionLink("Siguiente", "Index", new { Page = Model.CurrentPage + 1, Search = Model.Search },
              new { @class = "btn btn-sm btn-default" })

            <span></span>

            @Html.ActionLink(">>", "Index", new { Page = Model.TotalPage, Search = Model.Search },
             new { @class = "btn btn-sm btn-default" })
        }
        else
        {
            @Html.ActionLink("Siguiente", "Index", new { Page = Model.CurrentPage - 1, Search = Model.Search },
             new { @class = "btn btn-sm btn-default disabled" })

            <span></span>

            @Html.ActionLink(">>", "Index", new { Page = Model.TotalPage, Search = Model.Search },
             new { @class = "btn btn-sm btn-default disabled" })
        }
    </div>


</body>
